@using System.Web.Optimization;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*<link href="~/CSS/Styles.css" rel="stylesheet" type="text/css" />*@

    @Styles.Render("~/Content/MyCss")
    @Scripts.Render("~/Scripts/MyScript")

</head>
<body style="padding-top:0px";>
    <nav class="navbar navbar-inverse navbar-static-top">
        <div class="container-fluid" style="text-align: center; color: white;">
            <h3>HOSPITAL MANAGEMENT SYSTEM</h3>
            <div style="margin-top: -3%;margin-left: 62%;">
                @if (!string.IsNullOrEmpty(HttpContext.Current.User.Identity.Name))
                {
                    <b>Logged In As: @HttpContext.Current.User.Identity.Name</b>
                }
            </div>
            <div style="margin-top:-2.2%;margin-left:94%;">
                @if (!string.IsNullOrEmpty(HttpContext.Current.User.Identity.Name))
                 {
                     <a class="btn btn-danger" onclick="location.href='@Url.Action("LogOut", "Patients")'">Log Out</a>
                 }
            </div>
            
        </div>
    </nav>
    <div class="container">
        <div class="container body-content">
            @RenderBody()
        </div>
    </div> 
</body>
</html>