                    "preventDuplicates": false,
                    "onclick": null,
                    "showDuration": "200",
                    "hideDuration": "1000",
                    "timeOut": "3000",
                    "extendedTimeOut": "1000",
                    "showEasing": "swing",
                    "hideEasing": "linear",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut"
                }
                toastr["error"]("Employee deleted successfully!")

                modal.modal('hide');
                dataTable.ajax.reload(null, false);
            }
        })
    }
    $(document).keydown(function (event) {
        if (event.keyCode == 27) {
            $('#close')[0].click();
        }
    });
</script>
