<script>
    function registermodal() {
        $.get("/Patients/Register", { ActionType: "Add" }, function (result) {
            $('#datamodalbody').html(result);
            $('#datamodal').modal('show');
            btnEdit.style.display = "none";
            btnSave.style.display = "none";
        })
    }
    function registeremployee() {
        var modal = $("#datamodal");
        var form = $('form[name="addform"]');
        var name = validatename();
        var email = validateemail();
        var contact = validatecontact();
        var password = validatepassword();
        validatedesignation();
        var data = form.serialize();
        if (name && email && contact && password) {
            $.post("/Patients/Register", data, function (res) {
                if (res) {
                    toastr.options = {
                        "closeButton": true,
                        "newestOnTop": false,
                        "progressBar": true,
                        "positionClass": "toast-bottom-right",
                        "preventDuplicates": false,
                        "onclick": null,
                        "showDuration": "200",
                        "hideDuration": "1000",
                        "timeOut": "3000",
                        "extendedTimeOut": "1000",
                        "showEasing": "swing",
                        "hideEasing": "linear",
                        "showMethod": "fadeIn",
                        "hideMethod": "fadeOut"
                    }
                    toastr["success"]("Employee added successfully!")


                    modal.modal('hide');
                    dataTable.ajax.reload(null, false);
                }
            })
        }
    }

    function viewemployee(id) {
        $.get("/Patients/Edituser", { operation: "Edit", id: id }, function (result) {
            $('#datamodalbody').html(result);
            $('#datamodal').modal('show');
            $('.disable').attr('disabled', true);
            addsave.style.display = "none";
            document.getElementById("btnSave").disabled = true;
            $('#btnEdit').show();
            $('#btnSave').hide();
            $('#Passwordhide').hide();
        })
    }
    function viewEditemployee(id) {
        $.get("/Patients/Edituser", { operation: "Edit", id: id }, function (result) {
            $('#datamodalbody').html(result);
            $('#datamodal').modal('show');
            $('.disable').attr('disabled', false);
            addsave.style.display = "none";
            document.getElementById("btnSave").disabled = false;
            $('#btnEdit').hide();
            $('#Passwordhide').hide();
        })
    }
    function editemployee() {
        $('.disable').attr('disabled', false);
        document.getElementById("btnSave").disabled = false;
        $('#btnSave').show();
        $('#btnEdit').hide();
    }
